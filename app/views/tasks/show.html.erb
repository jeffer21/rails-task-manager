<h1>Your Task</h1>

<h2><%= @task.name %></h2>

<%= link_to "Edit a new Task", edit_task_path %>
<%= link_to "Delete", task_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %>

<%= simple_form_for [@task, @sub_task] do |f| %>
  <%= f.input :name %>
  <%= f.association :task, value_method: :id, label_method: :name %>

  <%= f.submit %>
<% end %>



